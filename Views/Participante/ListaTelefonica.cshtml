@{
    ViewBag.Numero = new Random().Next();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <select class="form-control" id="lista-telefonica-eventoid" onchange="CarregarTabelaListaTelefonica()">
                    @foreach (var evento in ViewBag.Eventos)
                    {
                        <option value="@evento.Id">@evento.TipoEvento @evento.Titulo</option>
                    }
                </select>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-lista-telefonica" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Nome</th>
                        <th>Padrinho</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal inmodal" id="modal-opcoes" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <div class="moldura-modal p-h-xs" id="form-opcoes">
                    <h4 class="text-center">Mensagem</h4>
                    <div class="row m-md">
                        <div class="col-xs-3 p-w-md text-center pointer pagamento"  onclick="select1('pagamento')">
                            <i class="far fa-money-bill-alt fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Pagamento</h4>
                        </div>
                        <div class="col-xs-3 p-w-md text-center pointer covid" onclick="select1('covid')">
                            <i class="fa fa-viruses fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Covid 19</h4>
                        </div>
                        <div class="col-xs-3 p-w-md text-center pointer info"  onclick="select1('info')">
                            <i class="fas fa-info-circle fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Informações Gerais</h4>
                        </div>
                        <div class="col-xs-3 p-w-md text-center pointer carta"  onclick="select1('carta')">
                            <i class="fas fa-moon fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Noitita</h4>
                        </div>
                    </div>

                    <h4 class="text-center">Destinatário</h4>
                    <div class="row m-md">             
                        <div class="col-xs-3 p-w-md text-center pointer mae"  onclick="select2('mae')">
                            <i style='color: #e232dd' class="fa fa-user  fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Mãe</h4>
                            <h5 class="text-center maetext"></h5>
                        </div>
                        <div class="col-xs-3 p-w-md text-center pointer pai" onclick="select2('pai')">
                            <i style='color: #3289e2' class="fa fa-user  fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Pai</h4>
                            <h5 class="text-center paitext"></h5>
                        </div>
                        <div class="col-xs-3 p-w-md text-center pointer convite" onclick="select2('convite')">
                            <i style='color: #d46415' class="fa fa-user fa-3x m-t-sm"></i>
                            <h4 class="text-center m-t-sm">Indicação</h4>
                            <h5 class="text-center convitetext"></h5>
                        </div>
                    </div>


                    <div style="display:flex; width:100%">

                        <button type="button" class="btn btn-white" style="margin-left:auto;margin-right:10px" onclick="enviar()">Enviar</button>
                        <a target="_blank" href="#" class="btn btn-white btn-ligar" style="margin-right:auto">Ligar</a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/app/Participante/lista-telefonica.js?@ViewBag.Numero"></script>

    <script>

    </script>
}
