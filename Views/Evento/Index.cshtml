<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Cadastros</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>Filtros</h4>
            <div class="ibox-tools pull-right">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-xs-12 col-lg-3">
                    <h5>Tipo do Evento</h5>
                    <div style="display:flex">
                        <select class="form-control" id="evento-configuracaoId" multiple onchange="CarregarTabelaEvento()">
                        </select>
                    </div>
                </div>
             
            </div>      
        </div>
    </div>


    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <button class="btn btn-default" id="btn_Adicionar" onclick="EditEvento(0)">Adicionar</button>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-eventos" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Evento</th>
                        <th>Capacidade</th>
                        <th>Valor</th>
                        <th>Taxa</th>
                        <th>Data do Evento</th>
                        <th>Inscrições</th>
                        <th>Inscrições Equipe</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modal-eventos" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <div class="moldura-modal p-h-xs" id="form-evento">
                    <div class="row p-h-xs">
                        <input type="hidden" id="evento-id" />
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Descrição</h5>

                            <input type="text" class="form-control" id="evento-descricao" data-field="Descrição" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Numeraçao</h5>

                            <input type="number" class="form-control required" id="evento-numeracao" data-field="Numeração" />
                        </div>

                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Capacidade</h5>

                            <input type="number" class="form-control required" id="evento-capacidade" data-field="Capacidade" />
                        </div>

                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Data</h5>

                            <input type="text" class="form-control full-date required" id="evento-data" data-field="Data" />
                        </div>

                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Data por extenso</h5>

                            <input type="text" class="form-control " id="evento-dataextenso" data-field="Data por Extenso" />
                        </div>

                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Faixa etária</h5>

                            <input type="text" class="form-control " id="evento-faixaetaria" data-field="Faixa etária" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Tipo do Evento</h5>

                            @Html.Partial("~/Views/Componentes/SelectConfig.cshtml", new SysIgreja.ViewModels.SelectViewModel { Id = "evento-tipo", OnChange = "notExistFunction", DropdownParent = "form-evento" })                      
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Valor</h5>

                            <input type="number" class="form-control required" id="evento-valor" data-field="Valor" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Taxa</h5>

                            <input type="number" class="form-control required" id="evento-taxa" data-field="Taxa" />
                        </div>
                        <div class="col-sm-6 p-w-md m-t-md text-center">
                            <div class="checkbox i-checks-green">
                                <label> <input id="evento-global" class="evento-global" type="checkbox" value="true"> Evento Global? <i></i></label>
                            </div>
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Url externa</h5>

                            <input type="text" class="form-control" id="evento-urlexterna" data-field="Url externa" />
                        </div>
                        <div class="col-sm-12 p-w-md m-t-md text-center">
                            <div class="row">
                                <div class="col-sm-6 p-w-md text-center">
                                    <h5>Local do evento</h5>

                                    <input type="text" class="form-control" id="evento-nomelocal" data-field="Local do evento" />
                                </div>
                                <div class="col-sm-6 p-w-md text-center">
                                    <h5>Link do Google para o local</h5>

                                    <input type="text" class="form-control" id="evento-linklocal" data-field="Link do Google para o local" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 p-w-md m-t-md text-center">
                            <h5>Conteúdo</h5>

                            <textarea class="form-control" id="evento-conteudo" name="evento-conteudo"></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-white pull-right" onclick="PostEvento()">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>


