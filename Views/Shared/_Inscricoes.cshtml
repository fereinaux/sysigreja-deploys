<script>

    let corBotao = '@ViewBag.Configuracao.CorBotao'
        $(window).on('load', function () {
            document.querySelector('title').innerHTML = decodeURI('@ViewBag.Configuracao.Titulo | @ViewBag.Title')
            var logo = '@(ViewBag.Configuracao.Logo)' ? "data:image/png;base64,@(ViewBag.Configuracao.Logo)" : "data:image/png;base64,@(ViewBag.Login.Logo)"
              var logoRelatorio = '@(ViewBag.Configuracao.LogoRelatorio)' ? "data:image/png;base64,@(ViewBag.Configuracao.LogoRelatorio)" :"data:image/png;base64,@(ViewBag.Login.Logo)"

                   document.addEventListener('animationstart', function (event) {
                       if (event.animationName == 'title') {
                           $('.swal-modal').css('background', corBotao)
                $('.swal-modal').css('color', 'white')
                $('.swal-title').css('color', 'white')


                $('.swal-modal').css('background', corBotao)
                $('.swal-modal').css('color', 'white')
            }

            if (event.animationName == 'content') {
                $('.swal-content').css('color', 'white')
                $('.swal-content__input').css('background', corBotao)
            }


            if (event.animationName == 'text') {
                $('.swal-text').css('color', 'white')
                $('.swal-modal').css('background', corBotao)
            }

                       if (event.animationName == 'swalIcon') {
                           $('.swal-modal').css('background', corBotao)
                $('.swal-icon--custom').replaceWith(`<img style="max-width: 60%;
max-height: 150px;
padding: 15px;" src="/Inscricoes/LogoById/@ViewBag.EventoId">`)
            }
        });


            $('#preloader').fadeOut();

        })
    document.styleSheets[0].addRule('#loader-1:before,#loader-1:after ', `border-top-color: @ViewBag.Configuracao.CorBotao !important;`);
    $(document).ready(() => {

            @if (ViewBag.Configuracao.BackgroundId != null)
            {
                <text> $('.background-evento').css('background', `url(data:image/jpeg;base64,@ViewBag.Configuracao.Background) no-repeat center center fixed`) </text>
                <text> $('.background-evento').css('background-size', 'cover')</text>
            }

        $('.header-evento').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('.icon-check-evento').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('.btn-juventude').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('.btn-juventude').css('border-color', '@ViewBag.Configuracao.CorBotao')

        $('.btn-juventude').hover(function () {
            console.log($(this));
            $(this).css('filter', 'brightness(0.6)')
            $(this).css('filter', 'brightness(0.6)')

        }, function () {
            $(this).css('filter', 'brightness(100%)')
            $(this).css('filter', 'brightness(100%)')
        })


    })
</script>

