<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Cadastros</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                @Html.Partial("~/Views/Componentes/SelectEvento.cshtml", new SysIgreja.ViewModels.SelectViewModel { Id = "reuniao-eventoid-consulta", OnChange = "CarregarTabelaReuniao", Roles = "Financeiro,Administrativo,Admin" })
                <button class="btn btn-default" id="btn_Adicionar" onclick="EditReuniao(0)">Adicionar</button>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-reunioes" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Data da Reunião</th>
                        <th>Presente</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div id="root-reunioes">
</div>

<div class="modal inmodal" id="modal-presenca" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <table id="table-ata-presenca" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Equipe</th>
                            <th>Presença</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {

    <style>
    </style>
}

@section Scripts {

    <script src="~/Scripts/app/Reuniao/reuniao.js"></script>

    <script>

    </script>
}
