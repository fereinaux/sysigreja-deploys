<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h4>Evento</h4>
                    @Html.Partial("~/Views/Componentes/SelectEvento.cshtml", new SysIgreja.ViewModels.SelectViewModel {  Id = "presenca-eventoid", OnChange = "loadScreen", Roles = "Convites,Admin,Administrativo,Financeiro" })                  
                </div>
                <div class="col-xs-12 col-md-6">
                    <h4>Equipe</h4>
                    <select class="form-control" id="presenca-equipeid" onchange="CarregarTabelaPresenca()"></select>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-ata-presenca" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
            </table>
        </div>
    </div>
</div>

@section Styles {

    <style>

        .indeterminate::before {
            content: "!";
            color: white;
            font-size: 17px;
            margin-left: 8px;
        }

        .icheckbox_square-green.indeterminate {
            background: #2c8f7b !important;
        }
    </style>
}

@section Scripts {

    <script src="~/Scripts/app/Equipe/presenca.js"></script>

    <script>

    </script>
}
