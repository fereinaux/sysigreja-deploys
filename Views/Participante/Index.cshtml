                        <div class="col-sm-12 p-w-md text-center not-evento-bulk">
                            <h5>Mensagem Pai</h5>
                            <div style="width:100%;display:flex">

                                <select class="form-control bulk-mensagem-contato" id="bulk-mensagem-pai">
                                </select>
                                <button type="button" class="btn btn-success m-l-sm" onclick="enviarMensagens('pai')" data-dismiss="modal">Enviar</button>
                            </div>
                        </div>

                        <div class="col-sm-12 p-w-md text-center not-evento-bulk">
                            <h5>Mensagem Contato</h5>
                            <div style="width:100%;display:flex">

                                <select class="form-control bulk-mensagem-contato" id="bulk-mensagem-contato">
