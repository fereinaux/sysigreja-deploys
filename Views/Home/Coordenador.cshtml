@{
    ViewBag.Numero = new Random().Next();
}
<!DOCTYPE html>
<style>
    .avatar-membro {
        width: 20px;
        height: 30px;
        border-radius: 3px;
    }
</style>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coordenador</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/all.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/evento.css" rel="stylesheet">
    <link href="~/Content/coordenador.css" rel="stylesheet">

</head>



<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="widget-head-color-box bg-coord text-white p-lg text-center">
                    <div class="m-b-md">
                        <div class="d-flex m-b-lg">

                            <img id="img-logo" style="width:200px" class="m-auto" />
                        </div>
                        <h2 class="font-bold no-margins">
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i> Evento
                        </h2>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-lg-4 col-lg-offset-4 col-xs-6 col-xs-offset-3">
                                @Html.Partial("~/Views/Componentes/SelectEvento.cshtml", new SysIgreja.ViewModels.SelectViewModel { Class = "text-center bg-coord text-white", Id = "eventoid", OnChange = "CarregarTela", Roles = "Coordenador" })                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-head-color-box bg-coord text-white p-lg text-center">
                    <div class="m-b-md">
                        <h2 class="font-bold no-margins">
                            @ViewBag.Equipante.Nome
                        </h2>
                        <small class="equipe"></small>
                    </div>
                    <div>
                        <span>Membros na Equipe: <span class="qtd-membros"></span></span>
                        <button disabled id="btn-excel" class="btn btn-outline" style=" margin: 10px auto auto auto;border: 1px solid; display: block" onclick="ExportarExcel()"><i class="fa fa-file-excel"></i> Excel</button>
                    </div>
                </div>
                <div class="widget-text-box">
                    <table>
                        <thead>
                            <tr>
                                <th scope="col">Sexo</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Idade</th>
                                <th scope="col" id="col-equipe">Equipe</th>
                                <th scope="col">Oferta</th>
                                <th scope="col">Faltas</th>
                                <th scope="col">Contato</th>
                            </tr>
                        </thead>
                        <tbody class="membros">
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6 col-xs-12 col-arquivos">
                <div class="widget-head-color-box bg-coord text-white p-lg text-center">
                    <div class="m-b-md">
                        <h2 class="font-bold no-margins">
                            Arquivos
                        </h2>
                        <small class="qtd-arquivos"></small>
                    </div>
                </div>
                <div class="widget-text-box">
                    <table id="table-arquivos" data-equipe="">
                        <thead>
                            <tr>
                                <th scope="col">Arquivo</th>
                                <th scope="col"></th>

                            </tr>
                        </thead>
                        <tbody class="tbarquivos">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="widget-head-color-box bg-coord text-white p-lg text-center">
                    <div class="m-b-md">
                        <h2 class="font-bold no-margins">
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i> Reuniões
                        </h2>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-lg-4 col-lg-offset-4 col-xs-6 col-xs-offset-3">
                                <select class="form-control text-center bg-coord text-white" id="reuniaoid" onchange="CarregarTabelaPresenca()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-text-box">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:80%">Nome</th>
                                <th style="width:20%">Compareceu?</th>
                            </tr>
                        </thead>
                        <tbody class="tbpresenca"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    <script src="~/Scripts/app/Home/coordenador.js?@ViewBag.Numero"></script>
}


