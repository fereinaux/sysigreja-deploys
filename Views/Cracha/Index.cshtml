<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Configurações</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right w-300">
                <div class="row">
                    <div class="col-sm-8">
                        <select class="form-control" id="cracha-configId" onchange="CarregarTabelaCracha()">
                            @foreach (var config in ViewBag.Configuracoes)
                            {
                                <option value="@config.Id">@config.Titulo</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-default" id="btn_Adicionar" onclick="EditCracha(0)">Adicionar</button>
                    </div>
                </div>
            </div>

        </div>
        <div class="ibox-content">
            <table id="table-cracha" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Modelo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>

@Html.Partial("~/Views/Cracha/Modal.cshtml")


@section Styles {
    <style>

        .text-cracha {
            cursor: grab;
        }

        .line-break {
            width: 100%;
        }

        span:hover {
            opacity: 0.7;
        }

        .fa-align-left, .fa-align-center, .fa-align-right {
            color: #b3b1b1;
        }

            .fa-align-left.active, .fa-align-center.active, .fa-align-right.active {
                color: #626262;
            }


        .font-picker-div {
            flex: 1
        }

        .font-picker {
            width: 100%;
        }
    </style>


}


@section Scripts {


    <script src="~/Scripts/app/Cracha/cracha.js"></script>
}
