@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2CZ37FW7BZ"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-2CZ37FW7BZ');
    </script>
    @if (ViewBag.Configuracao.LogoId != null)
    {

        <link rel="icon" type="image/png" sizes="16x16" href="data:image/png;base64,@ViewBag.Configuracao.Logo" />
    }
    <title>@ViewBag.Configuracao.Titulo | Inscrições</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="~/Fonts/font-awesome/css/all.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/bootstrap.min.css" />
    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="~/assets/fonts/line-icons.css" />
    <!-- Slicknav -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/slicknav.css" />
    <!-- Off Canvas Menu -->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/menu_sideslide.css" />
    <!-- Color Switcher -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vegas.min.css" />
    <!-- Animate -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/animate.css" />
    <!-- Main Style -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/main.css" />
    <!-- Responsive Style -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css" />
    <style>
        a:hover {
            text-decoration: none !important;
            color: inherit !important;
        }
    </style>
</head>
<body>
    <!-- Header Area wrapper Starts -->
    <header id="header-wrap">
        <div class="menu-wrap">
            <div class="menu navbar">
                <div class="menu-list navbar-collapse">
                    <ul class="onepage-nev navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#header-wrap">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">Informações</a>
                        </li>
                    </ul>
                </div>
            </div>
            <button class="close-button" id="close-button">
                <i class="lni-close"></i>
            </button>
        </div>
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar menu-bg">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button class="navbar-toggler"
                            type="button"
                            data-toggle="collapse"
                            data-target="#main-navbar"
                            aria-controls="main-navbar"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        <span class="lni-menu"></span>
                        <span class="lni-menu"></span>
                        <span class="lni-menu"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="main-navbar">
                    <ul class="navbar-nav mr-auto w-100 justify-content-end clearfix">
                        <li class="nav-item" id="open-button">
                            <a class="nav-link">
                                <i class="lni-menu"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Mobile Menu Start -->
            <ul class="mobile-menu">
                <li>
                    <a href="#header-wrap">Início</a>
                </li>
                <li>
                    <a href="#services">Informações</a>
                </li>
            </ul>
            <!-- Mobile Menu End -->
        </nav>
        <!-- Navbar End -->
    </header>

    <!-- Intro Section Start -->
    <section class="intro">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="heading-count">
                        @if (ViewBag.Evento.Numeracao > 0)
                        {

                            <h2>O <span>@(ViewBag.Evento.Numeracao)</span>º @(ViewBag.Configuracao.Titulo) está chegando</h2>
                        }
                        else
                        {
                            <h2>O @(ViewBag.Configuracao.Titulo) está chegando</h2>
                        }
                        <p>Prepare-se para viver algo inesquecível...</p>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row countdown justify-content-center">
                        <div id="clock" class="time-count"></div>
                    </div>
                    <a href="#services-end" class="target-scroll page-scroll">
                        <i class="lni-chevron-down"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Intro Section End -->

    <section id="services" class="section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8 col-xs-12 text-center">
                    <h6 class="subtitle">Informações</h6>
                    <h2 class="section-title">O que você precisa saber</h2>
                    <div class="section-info">
                        Separamos as principais informações para que você tenha a sua
                        melhor experiência. Leia tudo com atenção.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 fadeInUp"
                     data-animation="fadeInUp">
                    <div class="services-item">
                        <div class="icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                        <h3><a href="#">Investimento</a></h3>
                        <p>
                            Preço: @string.Format("{0:C}", ViewBag.Evento.Valor)
                        </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 fadeInUp"
                     data-animation="fadeInUp"
                     data-delay="300">
                    <div class="services-item">
                        <div class="icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h3><a href="#">Data</a></h3>
                        <p>@ViewBag.Evento.DataEvento.ToString("dd") de @ViewBag.Evento.DataEvento.ToString("MMMM") de @ViewBag.Evento.DataEvento.ToString("yyyy")</p>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12 fadeInUp text-center" data-animation="fadeInUp" data-delay="300">
                    @Html.Raw(ViewBag.Evento.Conteudo)
                    <section id="services-end" class="section-padding">
                        @if ((int)ViewBag.Evento.Status == 4)
                        {
                            <a href="@ViewBag.UrlDestino" class="btn btn-juventude mt-5">Inscreva-se já</a>
                        }
                        @if ((int)ViewBag.Evento.StatusEquipe == 4)
                        {
                            <a href="/Inscricoes/Inscricoes/@ViewBag.EventoId?Tipo=Inscrições Equipe" class="btn btn-juventude mt-5 ml-2">Sirva conosco</a>
                        }
                    </section>
                </div>

            </div>
        </div>
    </section>

    <!-- Footer Section Start -->
    <footer class="footer-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="footer-text text-center">
                        <p>
                            Um evento realizado pela
                            <a href="#">Igreja Episcopal Carismática do Brasil</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Go to Top Link -->
    <a href="#" class="back-to-top">
        <i class="lni-chevron-up"></i>
    </a>


    <div id="preloader">
        <div class="loader" id="loader-1"></div>
    </div>
    <!-- End Preloader -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/assets/js/jquery-min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/vegas.min.js"></script>
    <script src="~/assets/js/jquery.countdown.min.js"></script>
    <script src="~/assets/js/menu.js"></script>
    <script src="~/assets/js/classie.js"></script>
    <script src="~/assets/js/scrolling-nav.js"></script>
    <script src="~/assets/js/jquery.nav.js"></script>
    <script src="~/assets/js/jquery.easing.min.js"></script>
    <script src="~/assets/js/wow.js"></script>
    <script src="~/assets/js/jquery.slicknav.js"></script>
    <script src="~/assets/js/form-validator.min.js"></script>
    <script src="~/assets/js/contact-form-script.min.js"></script>
    <script src="~/Scripts/app/Util/forms.js"></script>
    <script>
        (function ($) {

            "use strict";

            $(window).on('load', function () {

                /* Page Loader active
               ========================================================*/
                $('#preloader').fadeOut();

                // Sticky Nav
                $(window).on('scroll', function () {
                    if ($(window).scrollTop() > 200) {
                        $('.scrolling-navbar').addClass('top-nav-collapse');
                    } else {
                        $('.scrolling-navbar').removeClass('top-nav-collapse');
                    }
                });

                /* slicknav mobile menu active  */
                $('.mobile-menu').slicknav({
                    prependTo: '.navbar-header',
                    parentTag: 'liner',
                    allowParentLinks: true,
                    duplicate: true,
                    label: '',
                    closedSymbol: '<i class="icon-arrow-right"></i>',
                    openedSymbol: '<i class="icon-arrow-down"></i>',
                });

                /* ==========================================================================
                countdown timer
                ========================================================================== */
                jQuery('#clock').countdown('@ViewBag.Evento.DataEvento.ToString("yyyy/MM/dd")', function (event) {
                    var $this = jQuery(this).html(event.strftime(''
                        + '<div class="time-entry days"><span>%-D</span> Dias</div> '
                        + '<div class="time-entry hours"><span>%H</span> Horas</div> '
                        + '<div class="time-entry minutes"><span>%M</span> Minutos</div> '
                        + '<div class="time-entry seconds"><span>%S</span> Segundos</div> '));
                });

                /* WOW Scroll Spy
                ========================================================*/
                var wow = new WOW({
                    //disabled for mobile
                    mobile: false
                });
                wow.init();

                // one page navigation
                $('.onepage-nev').onePageNav({
                    currentClass: 'active'
                });

                /* Back Top Link active
                ========================================================*/
                var offset = 200;
                var duration = 500;
                $(window).scroll(function () {
                    if ($(this).scrollTop() > offset) {
                        $('.back-to-top').fadeIn(400);
                    } else {
                        $('.back-to-top').fadeOut(400);
                    }
                });

                $('.back-to-top').on('click', function (event) {
                    event.preventDefault();
                    $('html, body').animate({
                        scrollTop: 0
                    }, 600);
                    return false;
                });

            });

        }(jQuery));
    </script>
    <script>
    let corBotao = '@ViewBag.Configuracao.CorBotao'
        document.styleSheets[0].addRule('#loader-1:before,#loader-1:after ', `border-top-color: @ViewBag.Configuracao.CorBotao !important;`);
    $(document).ready(function () {

            @if (ViewBag.Configuracao.BackgroundId != null)
            {
                 <text> document.styleSheets[0].addRule('.intro:before', `background: url(data:image/jpeg;base64,@ViewBag.Configuracao.Background) no-repeat center center fixed !important;`); </text>
            }



        document.styleSheets[0].addRule('.intro:before', `background-size: cover !important;`);
        document.styleSheets[0].addRule('.slicknav_btn', `border-color: @ViewBag.Configuracao.CorBotao !important;`);
        document.styleSheets[0].addRule('.slicknav_menu .slicknav_icon-bar', `background-color: @ViewBag.Configuracao.CorBotao !important;`);
        $('.navbar-expand-lg .navbar-nav .nav-link i').css('color', '@ViewBag.Configuracao.CorBotao')
        $('a.back-to-top i').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('.footer-area .footer-text p a').css('color', '@ViewBag.Configuracao.CorBotao')
        $('#services .icon i').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('#services .icon i').css('border-color', '@ViewBag.Configuracao.CorBotao')
        $('.btn-juventude').css('background-color', '@ViewBag.Configuracao.CorBotao')
        $('.btn-juventude').css('border-color', '@ViewBag.Configuracao.CorBotao')

        $('.btn-juventude').hover(function() {
            $(this).css('background-color', '@ViewBag.Configuracao.CorHoverBotao')
            $(this).css('border-color', '@ViewBag.Configuracao.CorHoverBotao')
        }, function() {
            $(this).css('background-color', '@ViewBag.Configuracao.CorBotao')
            $(this).css('border-color', '@ViewBag.Configuracao.CorBotao')
        })
    })
    </script>
</body>
</html>
