@{
    ViewBag.Numero = new Random().Next();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <select class="form-control" id="boletos-eventoid" onchange="CarregarTabelaBoletos()">
                    @foreach (var evento in ViewBag.Eventos)
                    {
                        <option value="@evento.Id">@evento.TipoEvento @evento.Titulo</option>
                    }
                </select>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-boletos" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th>Data Cadastro</th>
                        <th>WhatsApp</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/app/Participante/boletos.js?@ViewBag.Numero"></script>

    <script>

    </script>
}
