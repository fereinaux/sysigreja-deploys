@using Utils.Constants;
@{
    ViewBag.Numero = new Random().Next();
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right" style="width:400px">
                <div class="row">
                    <div class="col-xs-12 col-lg-6">
                        <select class="form-control" id="quarto-eventoid" onchange="CarregarTabelaQuarto()">
                            @foreach (var evento in ViewBag.Eventos)
                            {
                                <option value="@evento.Id">@evento.TipoEvento @evento.Numeracao.ToString()</option>
                            }
                        </select>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <button class="btn btn-primary" id="btn_Adicionar" onclick="DistribuirQuartos()">Distribuir</button>
                        <button class="btn btn-default" id="btn_Adicionar" onclick="EditQuarto(0)">Adicionar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-quarto" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Tipo</th>
                        <th>Participantes</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="ibox">
            <div class="ibox-title" style="display: flex;justify-content: space-between;">
                <h4>Gerenciar Quartos</h4>
            </div>
            <div class="ibox-content">
                <div class="row p-m">
                    <div class="col-xs-12 col-lg-3 sem-quarto quarto text-center">
                        <h4 class="p-h-xs">Participantes sem Quarto</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>@Html.TextBox("Participante", null, new { @class = "form-control", placeholder = "Buscar Participante" })  </th>
                                </tr>
                            </thead>
                            <tbody id="table-participantes"></tbody>
                        </table>
                    </div>
                    <div class="col-xs-12 col-lg-9">
                        <div class="row">
                            <div id="quartos">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modal-quarto" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h5 class="modal-title titulo-quarto"></h5>
            </div>
            <div class="modal-body">
                <div class="moldura-modal p-h-xs">
                    <div class="row p-h-xs">
                        <input type="hidden" id="quarto-id" />
                        <div class="col-sm-6 p-w-md m-b-sm text-center">
                            <h5>Título</h5>
                            <input type="text" class="form-control required" id="quarto-titulo" data-field="Título" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Capacidade</h5>

                            <input type="number" class="form-control required" id="quarto-capacidade" data-field="Capacidade" />
                        </div>
                        <div class="col-sm-12 p-w-md m-t-md text-center">
                            <h5>Sexo</h5>

                            <div class="radio i-checks-green inline"><label> <input type="radio" id="quarto-sexo" checked="" value="1" name="quarto-sexo"> <i></i> Masculino </label></div>
                            <div class="radio i-checks-green inline"><label> <input type="radio" id="quarto-sexo" value="2" name="quarto-sexo"> <i></i> Feminino </label></div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-white pull-right" onclick="PostQuarto()">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>

    </style>
}

@section Scripts {

    <script src="~/Scripts/app/Quarto/quarto.js?@ViewBag.Numero"></script>

    <script>

    </script>
}
