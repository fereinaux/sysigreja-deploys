@using Microsoft.AspNet.Identity
@using Utils.Constants;

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Configurações</a>
            </li>
        </ol>
    </div>
</div>
<div style="padding-top:10px;padding-bottom:0" class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox" style="margin:0">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right" style="width:250px">
                @if (User.IsInRole("Geral"))
                {
                    <button class="btn btn-primary" onclick="addConfig()">Adicionar</button>
                }
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight wrapper-config">

</div>


@section Styles {
    <style>
        span .inputFile {
            width: 100%;
        }
    </style>
}

@section Scripts {

    <script>
        configMsg = undefined
        configMsgEquipe = undefined
        camposConfig = undefined
        equipes = undefined
        function addConfig() {
            $.ajax({
                url: "/Configuracao/PostConfiguracao/",
                datatype: "json",
                type: "POST",
                contentType: `application/json; charset=utf-8`,
                data: JSON.stringify(
                    {
                        Titulo: ""
                    }),
                success: function () {
                    SuccessMesageOperation()
                    carregarConfiguracoes()
                }
            });
        }

        function PostConfig(id, tipoEvento) {
            if (ValidateForm(`#form-config${tipoEvento}`)) {
                $.ajax({
                    url: "/Configuracao/PostConfiguracao/",
                    datatype: "json",
                    type: "POST",
                    contentType: `application/json; charset=utf-8`,
                    data: JSON.stringify(
                        {
                            Id: id,
                            Titulo: $(`#config-titulo${tipoEvento}`).val(),
                            VincularMontagem: $(`#config-vincular${tipoEvento}:checked`).length > 0,
                            Identificador: $(`#config-identificador${tipoEvento}`).val(),
                            PublicTokenMercadoPago: $(`#config-public${tipoEvento}`).val(),
                            AccessTokenMercadoPago: $(`#config-access${tipoEvento}`).val(),
                            CorHoverBotao: $(`#config-corhoverbotao${tipoEvento}`).val(),
                            CorBotao: $(`#config-corbotao${tipoEvento}`).val(),
                            TipoCirculoId: $(`#config-tipocirculo${tipoEvento}`).val(),
                            TipoQuartoId: $(`#config-tipoquarto${tipoEvento}`).val(),
                            TipoEventoId: $(`#config-tipoevento${tipoEvento}`).val(),
                            EquipeCirculoId: $(`#config-equipecirculo${tipoEvento}`).val(),
                            EquipeCaronaId: $(`#config-equipecarona${tipoEvento}`).val(),
                            CentroCustoInscricaoId: $(`#config-centrocustoinscricao${tipoEvento}`).val(),
                            CentroCustoTaxaId: $(`#config-centrocustoequipe${tipoEvento}`).val(),
                            CorHoverScroll: $(`#config-corhoverscroll${tipoEvento}`).val(),
                            MsgConclusao: $(`#config-msg${tipoEvento}`).summernote('code'),
                            MsgConclusaoEquipe: $(`#config-msgequipe${tipoEvento}`).summernote('code'),
                        }),
                    success: function () {

                        $.ajax({
                            url: "/Configuracao/PostCampos/",
                            datatype: "json",
                            type: "POST",
                            contentType: `application/json; charset=utf-8`,
                            data: JSON.stringify(
                                {
                                    id: id,
                                    campos: $(`#config-campos${tipoEvento}`).val().map(campo => { return { CampoId: campo } })

                                }),
                            success: function () {
                                $.ajax({
                                    url: "/Configuracao/PostEquipes/",
                                    datatype: "json",
                                    type: "POST",
                                    contentType: `application/json; charset=utf-8`,
                                    data: JSON.stringify(
                                        {
                                            id: id,
                                            equipes: $(`#config-equipes${tipoEvento}`).val().map(equipe => { return { EquipeId: equipe, ShowInscricao: $(`#config-equipes-inscricao${tipoEvento}`).val().length == 0 || $(`#config-equipes-inscricao${tipoEvento}`).val().find(eq => eq == equipe) != undefined } })

                                        }),
                                    success: function () {
                                        $.ajax({
                                            url: "/Configuracao/PostCamposEquipe/",
                                            datatype: "json",
                                            type: "POST",
                                            contentType: `application/json; charset=utf-8`,
                                            data: JSON.stringify(
                                                {
                                                    id: id,
                                                    campos: $(`#config-camposequipe${tipoEvento}`).val().map(campo => { return { CampoId: campo } })

                                                }),
                                            success: function () {
                                                $.ajax({
                                                    url: "/Configuracao/PostIgrejas/",
                                                    datatype: "json",
                                                    type: "POST",
                                                    contentType: `application/json; charset=utf-8`,
                                                    data: JSON.stringify(
                                                        {
                                                            id: id,
                                                            igrejas: $(`#config-igreja${tipoEvento}`).val().map(igreja => { return { IgrejaId: igreja } })

                                                        }),
                                                    success: function () {
                                                        SuccessMesageOperation()
                                                        carregarConfiguracoes()
                                                    }, error: function () {
                                                        ErrorMessage('Você deve selecionar as congregações participantes')
                                                    }
                                                })
                                            }, error: function () {
                                                ErrorMessage('Você deve selecionar os campos da inscrição de equipantes')
                                            }
                                        });
                                    }, error: function () {
                                        ErrorMessage('Você deve selecionar as equipes do evento')
                                    }
                                });
                            }, error: function () {
                                ErrorMessage('Você deve selecionar os campos da inscrição de participantes')
                            }
                        });




                    }
                });
            }
        }

