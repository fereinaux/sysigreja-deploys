@using Microsoft.AspNet.Identity
@using Utils.Constants;
@{
    ViewBag.Numero = new Random().Next();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-xs-12 col-md-4 pull-right">
                    <select class="form-control" id="presenca-eventoid" onchange="GetReunioes()">
                        @foreach (var evento in ViewBag.Eventos)
                        {
                            <option value="@evento.Id">@evento.TipoEvento @evento.Numeracao.ToString()</option>
                        }
                    </select>
                </div>
                <div class="col-xs-12 col-md-4 pull-right">
                    <select class="form-control" id="presenca-equipeid" onchange="CarregarTabelaPresenca()"></select>
                </div>

                <div class="col-xs-12 col-md-4 pull-right">
                    <select class="form-control" id="presenca-reuniaoid" onchange="CarregarTabelaPresenca()"></select>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-presenca" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Compareceu?</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/app/Equipe/presenca.js?@ViewBag.Numero"></script>

    <script>

    </script>
}
