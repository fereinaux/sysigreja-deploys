@{
    ViewBag.Numero = new Random().Next();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12 p-md">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-xl-12 col-md-1">
        <div class="radio i-checks-green"><label> <input type="radio" class="tipo" value="1" checked="" name="etiquetas-tipo"> <i></i> Participante </label></div>
        <div class="radio i-checks-green"><label> <input type="radio" class="tipo" value="2" name="etiquetas-tipo"> <i></i> Equipante </label></div>
    </div>
    <div class="col-xs-12 col-md-2">
        <h5>Evento</h5>
        <select class="form-control chosen-select" id="etiquetas-eventoid" onchange="GetAdjacentes()">
            @foreach (var evento in ViewBag.Eventos)
            {
                <option value="@evento.Id" data-role="@evento.Role">@evento.TipoEvento @evento.Numeracao.ToString()</option>
            }
        </select>

    </div>
    <div class="col-xl-12 col-md-1">
        <h5>Modelo</h5>
        <select class="form-control chosen-select" id="etiquetas-crachas">
        </select>
    </div>
    <div id="participante">
        <div class="col-xs-12 col-md-4">
            <h5>Participante</h5>
            <select class="form-control chosen-select" id="etiquetas-participantes"></select>
        </div>
        <div class="col-xs-12 col-md-4">
            <h5>Círculo</h5>
            <select class="form-control chosen-select" id="etiquetas-circulos" onchange="LimparCampos()"></select>
        </div>
    </div>
    <div id="equipante" class="d-none">
        <div class="col-xs-12 col-md-4">
            <h5>Equipante</h5>
            <select class="form-control chosen-select" id="etiquetas-equipantes"></select>
        </div>
        <div class="col-xs-12 col-md-4">
            <h5>Equipe</h5>
            <select class="form-control chosen-select" id="etiquetas-equipes" onchange="LimparCampos()"></select>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight etiqueta">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row p-xs">
                <div class="col-xs-12 col-lg-6 col-lg-offset-3">
                    <div class="col-xs-12 p-xs">
                        <button class="btn btn-default form-control" id="btn_Imprimir" onclick="CarregarEtiquetas()">Imprimir Todas</button>
                    </div>

                </div>

            </div>
            <div class="moldura-modal p-h-xs d-flex" id="container-cracha" style="position:relative;display:none">
                <div class="moldura-modal" style="margin:auto;position:relative" id="cracha">
                    <img src="~/Images/profile.jpg" class="background" style="position:absolute;left:0;top:0;height:100%;width:100%;z-index:0" />
                    <span style="display: block;position: relative; z-index: 999; top: 50%; font-size:30px;" class="apelido-cracha text-cracha">{Apelido}</span>
                    <span style="display:block;position:relative;z-index:999; top:50%; font-size:20px" class="nome-cracha text-cracha">{Nome}</span>
                    <span style="display: block;position: relative; z-index: 999; top: 50%; font-size:30px;" class="equipe-cracha text-cracha">{Equipe}</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/app/Participante/etiquetas.js?@ViewBag.Numero"></script>
    <script src="~/Images/Montserrat-normal.js" type="module"></script>
    <script src="~/Images/mont-normal.js" type="module"></script>

    <script>

    </script>
}
