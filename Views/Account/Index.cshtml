<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Configurações</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <button class="btn btn-default" id="btn_Adicionar" onclick="EditUsuario('')">Adicionar</button>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-usuarios" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Login</th>
                        <th>Perfil</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modal-usuarios" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <div class="moldura-modal p-h-xs" id="form-usuario">
                    <div class="row p-h-xs">
                        <input type="hidden" id="usuario-id" />
                        <input type="hidden" id="usuario-oldsenha" />
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Login</h5>

                            <input type="text" class="form-control required text-lowercase" id="usuario-login" data-field="Login" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Senha</h5>

                            <div class="group-senha">
                                <input type="password" class="form-control required text-lowercase" id="usuario-senha" data-field="Senha" data-min-length="6" />
                                <button class="password-click" type="submit">
                                    <i class="fa fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-sm-8 col-sm-offset-2 p-h-md">
                            <div class="form-group">
                                <div class="radio i-checks-green inline"><label> <input type="radio" id="usuario-perfil" checked="" value="1" name="usuario-perfil"> <i></i> Admin </label></div>
                                <div class="radio i-checks-green inline p-l-xs"><label> <input type="radio" id="usuario-perfil" value="2" name="usuario-perfil"> <i></i> Coordenador </label></div>
                                <div class="radio i-checks-green inline p-l-xs"><label> <input type="radio" id="usuario-perfil" value="3" name="usuario-perfil"> <i></i> Secretaria </label></div>
                            </div>
                        </div>
                        <div class="col-sm-12 p-w-md text-center">
                            <h5>Equipante</h5>

                            <select class="form-control chosen-select" id="usuario-equipanteid"></select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-white pull-right" onclick="PostUsuario()">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .password-click {
            position: absolute;
            top: 0;
            right: 0;
            z-index: 10;
            border: none;
            background: transparent;
            outline: none;
            padding-top: 6px;
            padding-right: 20px;
        }

        .group-senha {
            position: relative;
        }

            .group-senha input {
                width: 100%;
            }
    </style>
}

@section Scripts {

    <script src="~/Scripts/app/Usuario/usuario.js"></script>

    <script>

    </script>
}
