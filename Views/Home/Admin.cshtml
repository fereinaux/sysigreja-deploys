            </div>
            <div class="row">
                <div class="pointer" id="resumo-financeiro-bloco" style="display:none" onclick="window.location.href='@Url.Action("Index", "Lancamento")'">
                    <div class="col-xs-12 p-w-xs">
                        <div class="widget-head-color-box navy-bg p-lg text-center">
                            <div class="m-b-md">
                                <h2 class="font-bold no-margins">
                                    Resumo Financeiro
                                </h2>
                            </div>
                        </div>
                        <div class="widget-text-box">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Forma de Pagamento</th>
                                        <th>Receber</th>
                                        <th>Pagar</th>
                                        <th>Saldo</th>
                                    </tr>
                                </thead>
                                <tbody id="resumo-financeiro"></tbody>
                                <tfoot>
                                    <tr>
                                        <th scope="row">Totais</th>
                                        <th id="receberTotal"></th>
                                        <th id="pagarTotal"></th>
                                        <th id="saldoTotal"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="pointer zero-participantes" onclick="window.location.href='@Url.Action("Index", "Participante")'">
                    <div class="col-xs-12 p-w-xs">
                        <div class="widget-head-color-box lazur-bg p-lg text-center">
                            <div class="m-b-md">
                                <h2 class="font-bold no-margins">
                                    Últimos Inscritos
