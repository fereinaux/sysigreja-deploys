                        <div class="col-sm-12 p-w-md text-center not-evento-bulk">
                            <h5>Mensagem Indicação</h5>
                            <div style="width:100%;display:flex">

                                <select class="form-control bulk-mensagem-contato" id="bulk-mensagem-convite">
                                </select>
                                <button type="button" class="btn btn-success m-l-sm" onclick="enviarMensagens('convite')" data-dismiss="modal">Enviar</button>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success m-l-sm" onclick="enviarMensagens()" data-dismiss="modal">Enviar</button>
                    <button type="button" class="btn btn-primary m-l-sm" onclick="applyBulk()" data-dismiss="modal">Aplicar</button>
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>

