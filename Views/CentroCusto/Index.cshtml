<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Configurações</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <button class="btn btn-default" id="btn_Adicionar" onclick="EditCentroCusto(0)">Adicionar</button>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-centro-custos" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Centro de Custo</th>
                        <th>Tipo</th>
                        <th>Ações</th>  
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modal-centro-custos" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <div class="moldura-modal p-h-xs" id="form-centro-custo">
                    <div class="row p-h-xs">
                        <input type="hidden" id="centro-custo-id" />
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Centro de Custo</h5>

                            <input type="text" class="form-control" id="centro-custo-descricao" data-field="Centro de Custo" />
                        </div>
                        <div class="col-sm-6 p-w-md text-center">
                            <h5>Tipo</h5>
                            <select class="form-control" id="centro-custo-tipo">
                                @foreach (var tipo in ViewBag.Tipos)
                                {
                                    <option value="@tipo.Id">@tipo.Description</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>             

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-white pull-right" onclick="PostCentroCusto()">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {   
    
}

@section Scripts {
    
    <script src="~/Scripts/app/CentroCusto/centro-custo.js"></script>

    <script>

    </script>
}
