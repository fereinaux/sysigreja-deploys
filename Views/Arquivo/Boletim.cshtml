<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Configurações</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title" style="display: flex;justify-content: space-between;">
            <h4>@ViewBag.Title</h4>
            <div class="ibox-tools pull-right">
                <button class="btn btn-default" id="btn_Adicionar" onclick="AddBoletim()">Adicionar</button>
            </div>
        </div>
        <div class="ibox-content">
            <table id="table-arquivos" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal inmodal" id="modal-boletim" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-body">
                <div class="moldura-modal p-h-xs">
                    <div class="row p-h-xs">
                        <form enctype="multipart/form-data" id="frm-boletim" method="post" novalidate="novalidate">
                            <div class="col-sm-6 p-w-md text-center">
                                <h5>Título</h5>

                                <input type="text" class="form-control required" id="arquivo-titulo" data-field="Título" />
                            </div>

                            <div class="col-sm-6 p-w-md text-center">
                                <h5>Data</h5>

                                <input type="text" class="form-control full-date required" id="arquivo-data" data-field="Data" />
                            </div>

                            <div class="col-sm-6 p-w-md text-center">
                                <h5>Arquivo</h5>

                                <input class="custom-file-input inputFile" id="arquivo-boletim" name="arquivo-boletim" type="file" accept="application/pdf" value="">
                            </div>
                           
                        </form>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right m-l-sm" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-white pull-right" onclick="PostArquivo()">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section Styles {

}

@section Scripts {

    <script src="~/Scripts/app/Arquivo/boletim.js"></script>

    <script>

    </script>
}
